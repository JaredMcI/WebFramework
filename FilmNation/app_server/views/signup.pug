extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up to FILM NATION

                // Login form
                form(method='POST' action='/register')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text', placeholder='Username' name='username')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')

                    div.form-group
                        label(for='name') name:
                        input#name.form-control(type='text', placeholder='name' name='name')
                    div.form-group
                        label(for='email') email:
                        input#email.form-control(type='email' name='email')
                    button.btn.btn-primary(type='submit') SignUp